@page
@model BookListing_Core_POC.Pages.BookPages.CreateModel
@{
}

<br>
<h2 class="text-danger">Add New Book</h2>

<div class="border container p-2">
    <from method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3"> 
                <a class="btn btn-secondary form-control" asp-page="Index">Cancel</a>
            </div>
            <div class="col-3 offset-3">
                <input type="submit" value="Add" class="btn btn-success form-control"/> 
            </div>
        </div>
    </from>
</div>

@page
@model BookListing_Core_POC.Pages.BookPages.CreateModel
@{
}

<br>

<h2 class="text-danger ml-lg-5" style="padding-left:230px">Add New Book</h2>

<div class="border container col-6 p-2">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Book.Name" class="form-control" />
            </div>
            <div class="col-4 mt-1">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6 mt-1">
                <input type="text" asp-for="Book.Author" class="form-control" />
            </div>
            <div class="col-4 mt-1">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6 mt-1">
                <input type="text" asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4"> 
                <a class="btn btn-secondary form-control btn-sm" asp-page="Index">Cancel</a>
            </div>
            <div class="col-3 ">
                <input type="submit" value="Add" class="btn btn-sm btn-success form-control" />
            </div>
        </div>
    </form>
</div>

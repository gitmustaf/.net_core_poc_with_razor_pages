@page
@model BookListing_Core_POC.Pages.BookPages.EditModel
@{
}

<br>

<h2 class="text-danger ml-lg-5" style="padding-left:21%">Edit Book Details</h2>

<div class="border container p-2 col-lg-6">
    <form method="post">
        <input type="hidden" asp-for="Book.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Book.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Book.Name"></span>
            </div>
            <div class="col-4 mt-1">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6 mt-1">
                <input type="text" asp-for="Book.Author" class="form-control" />
                <span class="text-danger" asp-validation-for="Book.Author"></span>
            </div>
            <div class="col-4 mt-1">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6 mt-1">
                <input type="text" asp-for="Book.ISBN" class="form-control" />
                <span class="text-danger" asp-validation-for="Book.ISBN"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <a class="btn btn-secondary form-control btn-sm" asp-page="Index">Cancel</a>
            </div>
            <div class="col-3 ">
                <input type="submit" value="Update" class="btn btn-sm btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
